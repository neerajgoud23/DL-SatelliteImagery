<body>
    <!-- Floating hearts background -->
    <div class="hearts-bg" id="heartsBg"></div>

    <!-- Confetti canvas -->
    <canvas class="celebration" id="confetti"></canvas>

    <!-- Main Card -->
    <div class="container" id="mainCard">
        <img src="https://media.giphy.com/media/3oriO0OEd9QIDdllqo/giphy.gif" alt="Cute Bear" class="valentine-img" id="mainImage">
        <h1>Will You Be My Valentine?</h1>
        <p class="subtitle">I promise to make you smile every day! üíï</p>
        
        <div class="buttons" id="buttonContainer">
            <button class="yes-btn" onclick="sayYes()">Yes ‚ù§Ô∏è</button>
            <button class="no-btn" id="noBtn" onmouseover="moveButton()" onclick="moveButton()">No üíî</button>
        </div>

        <div class="attempt-counter" id="attemptCounter"></div>
        <div class="sad-message" id="sadMessage">Please don't break my heart! ü•∫</div>
    </div>

    <!-- Final Success Message -->
    <div class="final-message" id="finalMessage">
        <div class="big-heart">üíñ</div>
        <h2 style="font-family: 'Dancing Script', cursive; color: #e74c3c; font-size: 2.5rem; margin: 1rem 0;">
            You Said Yes!
        </h2>
        <p style="color: #7f8c8d; margin-bottom: 1rem;">
            You've made me the happiest person alive!<br>
            Happy Valentine's Day! üíï
        </p>
        <button class="yes-btn" onclick="createLink()" style="margin-top: 1rem;">
            Create Your Own Link üîó
        </button>
    </div>

    <script>
        let attempts = 0;
        const messages = [
            "Are you sure? ü•∫",
            "Pretty please? üåπ",
            "I'll be sad... üò¢",
            "Don't do this! üíî",
            "My heart is breaking! üò≠",
            "Think again! ü§î",
            "Last chance! ‚ö†Ô∏è",
            "You can't say no! üö´",
            "Please reconsider! üôè",
            "I'm begging you! ü•∫"
        ];

        const sadTexts = [
            "Please don't break my heart! ü•∫",
            "Why are you doing this to me? üò¢",
            "I thought we had something special! üíî",
            "My tears are falling... üò≠",
            "You're making me cry! üíß",
            "I believe in us! Please! üåü",
            "Don't go breaking my heart! üéµ",
            "I'm literally shaking right now! üò∞"
        ];

        // Create floating hearts
        function createHearts() {
            const container = document.getElementById('heartsBg');
            const heartSymbols = ['üíï', 'üíñ', 'üíó', 'üíì', 'üíù', '‚ô•Ô∏è'];
            
            setInterval(() => {
                const heart = document.createElement('div');
                heart.className = 'heart-particle';
                heart.textContent = heartSymbols[Math.floor(Math.random() * heartSymbols.length)];
                heart.style.left = Math.random() * 100 + '%';
                heart.style.animationDuration = (10 + Math.random() * 10) + 's';
                heart.style.fontSize = (15 + Math.random() * 20) + 'px';
                container.appendChild(heart);
                
                setTimeout(() => heart.remove(), 20000);
            }, 1000);
        }

        createHearts();

        function moveButton() {
            const btn = document.getElementById('noBtn');
            const container = document.getElementById('buttonContainer');
            const counter = document.getElementById('attemptCounter');
            const sadMsg = document.getElementById('sadMessage');
            
            attempts++;
            
            // Calculate random position within container bounds
            const containerRect = container.getBoundingClientRect();
            const maxX = containerRect.width - btn.offsetWidth;
            const maxY = containerRect.height - btn.offsetHeight;
            
            const randomX = Math.random() * maxX;
            const randomY = Math.random() * maxY;
            
            btn.style.left = randomX + 'px';
            btn.style.top = randomY + 'px';
            btn.style.position = 'absolute';
            
            // Update counter with rotating messages
            counter.textContent = messages[Math.min(attempts - 1, messages.length - 1)] || "You have to say yes! üò§";
            
            // Show sad message randomly
            if (attempts > 2 && Math.random() > 0.5) {
                sadMsg.textContent = sadTexts[Math.floor(Math.random() * sadTexts.length)];
                sadMsg.classList.add('show');
                setTimeout(() => sadMsg.classList.remove('show'), 2000);
            }
            
            // Make button smaller each time
            if (attempts > 5) {
                btn.style.transform = `scale(${Math.max(0.5, 1 - attempts * 0.05)})`;
            }
            
            // Eventually hide the no button completely
            if (attempts > 10) {
                btn.style.opacity = '0';
                btn.style.pointerEvents = 'none';
                counter.textContent = "There's only one choice now! ‚ù§Ô∏è";
                counter.style.color = '#e74c3c';
                counter.style.fontWeight = 'bold';
            }
        }

        function sayYes() {
            const confetti = document.getElementById('confetti');
            const finalMsg = document.getElementById('finalMessage');
            const mainCard = document.getElementById('mainCard');
            
            // Hide main card
            mainCard.style.display = 'none';
            
            // Show celebration
            confetti.classList.add('active');
            finalMsg.classList.add('show');
            
            // Start confetti
            startConfetti();
            
            // Change URL for sharing
            if (history.pushState) {
                history.pushState({}, document.title, window.location.pathname + '?answered=yes');
            }
        }

        function createLink() {
            const newUrl = window.location.origin + window.location.pathname;
            
            // Copy to clipboard
            navigator.clipboard.writeText(newUrl).then(() => {
                alert('Link copied to clipboard! Send it to your crush! üíï\n\n' + newUrl);
            }).catch(() => {
                prompt('Copy this link and send it to your crush! üíï', newUrl);
            });
        }

        // Confetti effect
        function startConfetti() {
            const canvas = document.getElementById('confetti');
            const ctx = canvas.getContext('2d');
            canvas.width = window.innerWidth;
            canvas.height = window.innerHeight;
            
            const particles = [];
            const colors = ['#ff6b6b', '#feca57', '#48dbfb', '#ff9ff3', '#54a0ff', '#5f27cd'];
            
            function Particle() {
                this.x = Math.random() * canvas.width;
                this.y = Math.random() * canvas.height - canvas.height;
                this.size = Math.random() * 10 + 5;
                this.speedY = Math.random() * 3 + 2;
                this.speedX = Math.random() * 2 - 1;
                this.color = colors[Math.floor(Math.random() * colors.length)];
                this.rotation = Math.random() * 360;
                this.rotationSpeed = Math.random() * 10 - 5;
            }
            
            Particle.prototype.update = function() {
                this.y += this.speedY;
                this.x += this.speedX;
                this.rotation += this.rotationSpeed;
                
                if (this.y > canvas.height) {
                    this.y = -10;
                    this.x = Math.random() * canvas.width;
                }
            };
            
            Particle.prototype.draw = function() {
                ctx.save();
                ctx.translate(this.x, this.y);
                ctx.rotate(this.rotation * Math.PI / 180);
                ctx.fillStyle = this.color;
                ctx.fillRect(-this.size/2, -this.size/2, this.size, this.size);
                ctx.restore();
            };
            
            // Create particles
            for (let i = 0; i < 150; i++) {
                particles.push(new Particle());
            }
            
            function animate() {
                ctx.clearRect(0, 0, canvas.width, canvas.height);
                particles.forEach(p => {
                    p.update();
                    p.draw();
                });
                requestAnimationFrame(animate);
            }
            
            animate();
        }

        // Handle window resize
        window.addEventListener('resize', () => {
            const canvas = document.getElementById('confetti');
            canvas.width = window.innerWidth;
            canvas.height = window.innerHeight;
        });
    </script>
</body>
</html>
